{
    "required": [
        "name","email","subject","message"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "pattern": "^(([^<>()\\[\\]\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
        },
        "subject": {
            "type": "string"
        },
        "message": {
            "type": "string"
        }
    },
    "additionalProperties": false
}